@model AutoGenerateForm.ViewModel.FormModel
@{
    ViewBag.Title = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row ">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1 class="display-5">@Model.name</h1>
            <hr class="my-2">
            <p>@Model.description</p>

        </div>
        <form action="#" method="get" id="saveForm" name="saveForm" >

            <div class="table-bordered" style="padding:30px;">
                @foreach (var item in Model.fields)
                {

                    <div class="form-group row text-right">
                        <label for="@item.name" class="col-sm-2 col-form-label right">@item.name :</label>
                        <div class="col-sm-10">
                            <input type="@item.dataType" name="@item.name" class="form-control" id="@item.name" required="@item.required" value="">
                           
                        </div>
                    </div>

                }

                <div class="form-group" style="margin:0 auto;text-align:center">
                    <button type="submit" class="btn btn-info">Tıkla</button>
                </div>
                @*<tr>
                        <td style="text-align:center" colspan="2">
                            <button type="submit" class="btn btn-info">Tıkla</button>
                        </td>
                    </tr>*@


            </div>

        </form>
    </div>

</div>

